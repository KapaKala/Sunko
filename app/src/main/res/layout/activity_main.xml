<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainActivityLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_background"
    tools:context="fi.hk.sunko.MainActivity">

    <ImageView
        android:id="@+id/weatherBG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
         />


    <ImageView
        android:id="@+id/imageView"
        android:alpha="0"
        android:layout_width="76dp"
        android:layout_height="76dp"
        app:srcCompat="?android:attr/alertDialogIcon"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/progressBar" />

    <TextView
        android:id="@+id/weatherTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/background_light" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="99dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/refreshButton"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        android:onClick="refresh"
        android:tint="#feffffff"
        app:srcCompat="@drawable/ic_refresh_black_24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="42dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="24dp" />

    <ImageButton
        android:id="@+id/editLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="pickCityDialog"
        android:tint="#feffffff"
        app:srcCompat="@drawable/ic_search_black_24dp"
        android:layout_marginStart="24dp"
        android:layout_alignTop="@+id/refreshButton" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/editLocationButton"
        android:layout_alignBottom="@+id/editLocationButton"
        android:layout_alignTop="@+id/editLocationButton" />
</RelativeLayout>
